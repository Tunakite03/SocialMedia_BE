# WebRTC Configuration
# TURN Server Configuration (Optional - for production NAT traversal)
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=your_username
# TURN_CREDENTIAL=your_credential

# Alternative free TURN servers (for development/testing)
TURN_SERVER_URL=turn:turnserver.stunprotocol.org:3478
TURN_USERNAME=guest
TURN_CREDENTIAL=somepassword

# STUN servers are configured automatically (Google STUN servers)
# Additional STUN servers can be added in the webrtcService.js file

# Call Configuration
MAX_CALL_DURATION=3600 # Maximum call duration in seconds (1 hour)
MAX_PARTICIPANTS_PER_CALL=10
CALL_QUALITY_REPORT_INTERVAL=30 # Interval for quality metrics reporting in seconds

# Media Configuration
DEFAULT_VIDEO_RESOLUTION=720p
DEFAULT_AUDIO_BITRATE=64000
DEFAULT_VIDEO_BITRATE=1000000

# Logging
WEBRTC_DEBUG=false # Set to true for detailed WebRTC logging