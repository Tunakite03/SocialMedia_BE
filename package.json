{
   "name": "otakomi-backend",
   "version": "1.0.0",
   "description": "Backend for Otakomi social platform with real-time features",
   "main": "src/app.js",
   "scripts": {
      "start": "node src/app.js",
      "dev": "nodemon src/app.js",
      "test": "jest",
      "db:migrate": "prisma migrate dev",
      "db:generate": "prisma generate",
      "db:studio": "prisma studio",
      "db:seed": "node prisma/seed.js",
      "db:setup": "./setup-db.sh",
      "db:start": "docker-compose -f docker-compose.db.yml up -d",
      "db:stop": "docker-compose -f docker-compose.db.yml down",
      "db:logs": "docker-compose -f docker-compose.db.yml logs -f",
      "db:reset": "docker-compose -f docker-compose.db.yml down -v",
      "logs": "./view-logs.sh",
      "logs:all": "./view-logs.sh all",
      "logs:error": "./view-logs.sh error",
      "logs:clear": "./view-logs.sh clear",
      "logs:size": "./view-logs.sh size"
   },
   "keywords": [
      "nodejs",
      "express",
      "postgresql",
      "socketio",
      "webrtc",
      "social-platform"
   ],
   "author": "Otakomi Team",
   "license": "MIT",
   "dependencies": {
      "@prisma/client": "^5.7.1",
      "axios": "^1.6.2",
      "bcryptjs": "^2.4.3",
      "cloudinary": "^2.8.0",
      "compression": "^1.7.4",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "express-rate-limit": "^7.1.5",
      "helmet": "^7.1.0",
      "joi": "^17.11.0",
      "jsonwebtoken": "^9.0.2",
      "morgan": "^1.10.0",
      "multer": "^1.4.5-lts.1",
      "multer-storage-cloudinary": "^4.0.0",
      "node-cron": "^3.0.3",
      "socket.io": "^4.7.4",
      "uuid": "^9.0.1",
      "winston": "^3.18.3"
   },
   "devDependencies": {
      "jest": "^29.7.0",
      "nodemon": "^3.0.2",
      "prisma": "^5.7.1",
      "supertest": "^6.3.3"
   },
   "engines": {
      "node": ">=18.0.0"
   }
}
